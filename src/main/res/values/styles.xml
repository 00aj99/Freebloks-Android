<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.Freebloks.Dark" parent="android:Theme.Material">
        <item name="android:textAppearance">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
        <item name="android:colorAccent">@color/color_accent</item>
    </style>
    <style name="Theme.Freebloks.Game" parent="Theme.Freebloks.Dark">
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="Theme.Freebloks.Light" parent="android:Theme.Material.Light">
        <item name="android:textAppearance">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
        <item name="android:colorAccent">@color/color_accent</item>
    </style>
    <style name="Theme.Freebloks.Auto.Light" parent="Theme.Freebloks.Light"></style>
    <style name="Theme.Freebloks.Preferences" parent="android:Theme.DeviceDefault.Light"></style>

    <style name="Theme.Freebloks.Dialog" parent="android:Theme.Material.Dialog.MinWidth">
        <item name="android:textAppearance">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
        <item name="android:colorAccent">@color/color_accent</item>
    </style>

    <style name="Theme.Freebloks.Light.Dialog" parent="android:Theme.Material.Light.Dialog.MinWidth">
        <item name="android:textAppearance">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
        <item name="android:colorAccent">@color/color_accent</item>
    </style>
    <style name="Theme.Freebloks.NoTitleBar" parent="android:Theme.Material.NoActionBar"></style>
    <style name="Theme.Freebloks.Translucent.NoTitleBar" parent="android:Theme.Translucent.NoTitleBar"></style>

    <style name="Widget.Light.Button.Borderless" parent="android:Widget.Material.Light.Button.Borderless" />
    <style name="Widget.Button.Borderless" parent="android:Widget.Material.Button.Borderless" />

    <style name="TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>
    <style name="TextAppearance.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>
    <style name="TextAppearance.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="Rules_Heading1" parent="@style/TextAppearance.Large">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Rules_Heading2" parent="@style/TextAppearance.Medium">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>

    </style>

    <style name="Rules_Paragraph" parent="@style/TextAppearance.Medium">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">?android:textColorSecondary</item>

    </style>

    <style name="titleDivider" parent="android:TextAppearance">
        <item name="android:background">?android:attr/colorActivatedHighlight</item>
        <item name="android:layout_height">2dip</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
</resources>
