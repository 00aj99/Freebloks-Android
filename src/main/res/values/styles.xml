<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextAppearance.Small" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="TextAppearance.Medium" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="TextAppearance.Large" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="TextAppearance.Button" parent="@style/TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <style name="Widget.ActionBar.Surface.Elevated" parent="@style/Widget.MaterialComponents.ActionBar.Surface">
        <item name="background">?colorSurface</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Rules_Heading1" parent="@style/TextAppearance.Large">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Rules_Heading2" parent="@style/TextAppearance.Medium">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Rules_Paragraph" parent="@style/TextAppearance.Medium">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>
