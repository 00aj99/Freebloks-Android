<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="first_preferencescreen" >

    <PreferenceCategory android:title="@string/preferences_view" >
		<CheckBoxPreference
		    android:summary="Vibrate when moving stones"
		    android:title="Vibrate"
		    android:defaultValue="true"
		    android:persistent="true"
		    android:key="vibrate" />

		<CheckBoxPreference
		    android:summary="Play sound effects"
		    android:title="Sounds" 
		    android:enabled="false" />

		<CheckBoxPreference
		    android:summary="Show possible corners of your stones"
		    android:title="Show corners" 
		    android:defaultValue="true"
		    android:persistent="true"
		    android:key="show_seeds" />

		<CheckBoxPreference
		    android:summary="Show stones of opponents"
		    android:title="Show opponents"
		    android:defaultValue="true"
		    android:persistent="true"
		    android:key="show_opponents" />

		<CheckBoxPreference
		    android:summary="Show animations when placing stones"
		    android:title="Show Animations"
		    android:defaultValue="true"
		    android:persistent="true"
		    android:key="show_animations" />
		
	</PreferenceCategory>
    
    <PreferenceCategory android:title="About..." >

        <PreferenceScreen
            android:summary="Please fork me!"
            android:title="Freebloks on GitHub..." >

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/shlusiak/Freebloks-Android" />
        </PreferenceScreen>
        
        <PreferenceScreen
            android:summary="Please rate or leave a comment"
            android:title="Freebloks in Google Play..." >

            <intent
                android:action="android.intent.action.VIEW"
                android:data="market://details?id=de.saschahlusiak.freebloks" />
        </PreferenceScreen>

        <PreferenceScreen
            android:summary="Copyright (c) by Sascha Hlusiak, 2012-2013."
            android:title="About Freebloks..." >
            <intent android:action="de.saschahlusiak.freebloks.SHOW_ABOUT" />
        </PreferenceScreen>
    </PreferenceCategory>    

</PreferenceScreen>