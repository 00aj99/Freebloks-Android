<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:padding="@dimen/dialog_padding">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/spinner_layout"
            android:layout_marginBottom="@dimen/dialog_button_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/game_mode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/game_modes"/>

            <Spinner
                android:id="@+id/field_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:entries="@array/game_field_sizes"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/players_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/player2"
                    android:padding="@dimen/dialog_button_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yellow"/>

                <CheckBox
                    android:id="@+id/player1"
                    android:padding="@dimen/dialog_button_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Blue"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/player3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dialog_button_margin"
                    android:text="Red"/>

                <CheckBox
                    android:id="@+id/player4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dialog_button_margin"
                    android:text="Green"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/difficulty_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:text="@string/difficulty"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/difficulty_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:typeface="monospace"/>

            <SeekBar
                android:id="@+id/difficulty_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/difficulty_label"
                android:max="10"/>
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:id="@+id/custom_stones_layout"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/textSizeLarge"
                    android:text="1"/>

                <TextView
                    android:layout_column="1"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/monomino"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/picker1"
                    android:layout_column="1"
                    app:np_max="9"
                    app:np_min="0"
                    app:np_value="1"
                    app:np_selectedTextColor="?colorAccent"
                    app:np_textColor="?colorAccent"
                    app:np_dividerColor="?colorAccent"
                    app:np_wrapSelectorWheel="false"
                    app:np_orientation="horizontal"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/textSizeLarge"
                    android:text="2"/>

                <TextView
                    android:layout_column="1"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/domino"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/picker2"
                    android:layout_column="1"
                    app:np_max="9"
                    app:np_min="0"
                    app:np_value="1"
                    app:np_selectedTextColor="?colorAccent"
                    app:np_textColor="?colorAccent"
                    app:np_dividerColor="?colorAccent"
                    app:np_wrapSelectorWheel="false"
                    app:np_orientation="horizontal"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/textSizeLarge"
                    android:text="3"/>

                <TextView
                    android:layout_column="1"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/tromino"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/picker3"
                    android:layout_column="1"
                    app:np_max="9"
                    app:np_min="0"
                    app:np_value="1"
                    app:np_selectedTextColor="?colorAccent"
                    app:np_textColor="?colorAccent"
                    app:np_dividerColor="?colorAccent"
                    app:np_wrapSelectorWheel="false"
                    app:np_orientation="horizontal"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/textSizeLarge"
                    android:text="4"/>

                <TextView
                    android:layout_column="1"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/tetromino"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/picker4"
                    android:layout_column="1"
                    app:np_max="9"
                    app:np_min="0"
                    app:np_value="1"
                    app:np_selectedTextColor="?colorAccent"
                    app:np_textColor="?colorAccent"
                    app:np_dividerColor="?colorAccent"
                    app:np_wrapSelectorWheel="false"
                    app:np_orientation="horizontal"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="@dimen/textSizeLarge"
                    android:text="5"/>

                <TextView
                    android:layout_column="1"
                    android:layout_gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/pentomino"/>

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/picker5"
                    android:layout_column="1"
                    app:np_max="9"
                    app:np_min="0"
                    app:np_value="1"
                    app:np_selectedTextColor="?colorAccent"
                    app:np_textColor="?colorAccent"
                    app:np_dividerColor="?colorAccent"
                    app:np_wrapSelectorWheel="false"
                    app:np_orientation="horizontal"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_button_margin"
            android:clipChildren="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clipChildren="false">

                <Button
                    android:id="@+id/advanced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?borderlessButtonStyle"
                    android:text="@string/advanced"/>
            </LinearLayout>

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?borderlessButtonStyle"
                android:text="@android:string/cancel"/>

            <Button
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@android:string/ok"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>