<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.saschahlusiak.freebloks"
    android:versionCode="4"
    android:versionName="0.0.1_pre4" >

    <uses-sdk android:minSdkVersion="14" 
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

	<uses-feature android:name="android.hardware.screen.portrait" android:required="true"/>

	<supports-screens
	    android:smallScreens="false"
	    android:normalScreens="true"
	    android:largeScreens="true" 
	    android:xlargeScreens="true"/>

    <application
        android:icon="@drawable/freebloks"
        android:label="@string/app_name" >
        <activity
            android:name=".startscreen.StartScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".game.FreebloksActivity"
            android:label="@string/app_name" >
        </activity>
   		<activity
            android:name=".preferences.FreebloksPreferences"
            android:label="@string/app_name" >
        </activity>        
    </application>

</manifest>